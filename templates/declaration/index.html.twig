{% extends 'base.html.twig' %}

{% block title %}Declaration index{% endblock %}

{% block body %}
    <h1>Declaration index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateHeureD</th>
                <th>InfoSupp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for declaration in declarations %}
            <tr>
                <td>{{ declaration.id }}</td>
                <td>{{ declaration.dateHeureD ? declaration.dateHeureD|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ declaration.infoSupp }}</td>
                <td>
                    <a href="{{ path('app_declaration_show', {'id': declaration.id}) }}">show</a>
                    <a href="{{ path('app_declaration_edit', {'id': declaration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_declaration_new') }}">Create new</a>
{% endblock %}
