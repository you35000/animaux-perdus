<div class="row">
    <h2 class="text-center">Fiche animal </h2>
    <div class=" col-10 offset-1">
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-3 p-3">
                    {% if animal.photo %}
                        <img src="{{ asset('uploads/animal_img/' ~  animal.photo) }}" class="img-fluid rounded-start"
                             alt="Photo animal {{ animal.nom }}">
                    {% else %}
                        <img src="{{ asset('img/animal.jpg')}} " class="img-fluid rounded-start"
                             alt="Photo profil de {{ animal.nom }}">
                    {% endif %}
                </div>
                <div class="col-md-9">
                    <div class="card-body">
                        <h5 class="card-title ps-3">{{ animal.nom }}</h5>
                        {{ form_start(form) }}
                        <div class="row mt-5">
                            <div class="col-6">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">{{ form_row(form.nom) }}</li>
                                    <li class="list-group-item">{{ form_row(form.especes) }}</li>
                                    <li class="list-group-item">{{ form_row(form.races) }}</li>
                                    <li class="list-group-item">{{ form_row(form.sexe) }}</li>
                                    <li class="list-group-item">{{ form_row(form.castre) }}</li>
                                    <li class="list-group-item">{{ form_row(form.puceElectro) }}</li>
                                    <li class="list-group-item">{{ form_row(form.tatouage) }}</li>
                                    <div class="row md-9">
                                        <div class="col-6">{{ form_row(form.age) }}</div>
                                            <div class="col-5">{{ form_row(form.anOuMois) }}</div>
                                    </div>

                                </ul>
                            </div>
                            <div class="col-6">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">{{ form_row(form.collier) }}</li>
                                    <li class="list-group-item">{{ form_row(form.typeColliers) }}</li>
                                    <li class="list-group-item">{{ form_row(form.croisements) }}</li>
                                    <li class="list-group-item">{{ form_row(form.silhouettes) }}</li>
                                    <li class="list-group-item">{{ form_row(form.tailles) }}</li>
                                    <li class="list-group-item">{{ form_row(form.poils) }}</li>
                                    <li class="list-group-item">{{ form_row(form.couleurs) }}</li>
                                </ul>
                                <div class="mt-3 text-center">
{#                                    <button class="btn btn-success btn-lg me-5">Enregistrer</button>#}
                                    <button class="btn">{{ button_label|default('Save') }}</button>
                                    <a href="{{ path('main_home') }}" class="btn btn-outline-secondary btn-lg">Retour</a>
                                </div>

                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center">

        </div>
    </div>
</div>